<div class="container">
  <div class="row">
    <div class="col">
      <h1 class= "text-white"><%= @competition.name %></h1>
      <span class= "text-white">
        Location: <%= @competition.location %><br>
        <%= @competition.description %>
        </span><br>
        <%= link_to "Competition Stats", "/competitions/#{@competition.id}/stats" %>
    </div>
    <div class="col">
      <h3 class="text-white">Teams Competing: </h3>
      <ul>
        <% @competition.teams.each do|team| %>
          <li><%= link_to team.name, team_path(team) %></li>
        <% end %>
      </ul>
    </div>
    <div class="col">
      <h3 class= "text-white">Events: </h3>
      <ul>
        <% @competition.events.each do|event| %>
          <li><%= link_to event.title, event_path(event) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
<% if @user && @user.id == @competition.competition_manager_id %>
  <div class="container">
    <div class="row">
      <div class="col">
      <h4><%= link_to "Edit Competition", "/competitions/#{@competition.id}/edit" %></h4>
      </div>
      <div class="col">
      <h4><%= link_to "Add Event", "/competitions/#{@competition.id}/event/new" %></h4>
      </div>
      <div class="col">
      <h4><%= link_to "Add Team", "/competitions/#{@competition.id}/team/new" %></h4>
      </div>
    </div>
  </div>
<% end %>

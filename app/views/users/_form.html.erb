<% if flash[:error] %>
  <div class="container">
    <div class="row">
      <div class="col-center">
        <% flash[:error].each do |e| %>
          <h1 class="text-danger"><%= e %></h1>
        <%end%>
      </div>
    </div>
  </div>
<%end%>

<%= form_for @user do |f| %>
  <div class= "container">
    <div class= "row">
      <div class="col">
      <h4><span class= "text-white"> Name: </span></h4>
  <%= f.text_field :name %><br/>
  <h4><span class= "text-white"> Profile Type: </span></h4>
  <%= f.select(:user_type, options_for_select(['Competition Manager','Event Manager','Team Manager'].map{|g| [g,g]})) %><br>
  <h4><span class= "text-white"> Username: </span></h4>
  <%= f.text_field :username %><br/>
  <h4><span class= "text-white"> Password: </span></h4>
  <%= f.password_field :password %><br><br>
  <%= f.submit %>
  </div>
  </div>
  </div>
<% end %>
